{
  "verbose": true,
  "template": {
    "cuda": true,
    "data": "./data/penn",
    "model": "LSTM",
    "optim": "sgd",
    "emsize": [500, 300],
    "nhid": [500, 700],
    "nlayers": [2, 1],
    "dropout": [0.6],
    "lr": 20,
    "min_lr": 1e-5,
    "weight_decay": 0,
    "momentum": 0.05,
    "clip": 0.5,
    "epochs": 25,
    "batch_size": 20,
    "vocab_size": 10000,
    "sequence_length": 20,
    "seed": 1111,
    "log_interval": 100,
    "logfile": "logs/{}.txt",
    "results": "results/{}.txt",
    "save": "models/{}.pt",
    "shuffle": true,
    "initialization": {
      "word_embedding": "random",
      "weights": "random",
      "hidden_state": "random"
    },
    "len_relation":false
  },
  "max_saved_models": 50,
  "training_cap": 100
}
